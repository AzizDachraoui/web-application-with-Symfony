{% extends "FaculteAdminBundle::layout.html.twig"%}

{% block content %}
<div class="page-content">
    <!-- BEGIN BREADCRUMBS -->
    <div class="breadcrumbs">
        <h1>Gestion des résultats des examens</h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('faculte_admin_homepage') }}">Accueil</a>
            </li>
            <li class="active" >liste des résultats des examens</a>
            </li>
        </ol>
    </div>
    <!-- END BREADCRUMBS -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light form-fit bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <div class="caption">
                           <i class="fa fa-graduation-cap font-green"></i>
                            <span class="caption-subject font-green bold uppercase">liste des résultats des examens</span>
                        </div>
                    </div>
                    <div class="actions">

                    </div>
                </div>
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption font-dark">
                            <a  class="btn green-sharp btn-outline  btn-block "  href="{{ path('faculte_admin_ajouter_resultats')}}"><i class="fa fa-plus-circle "> Résultats</i></a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Filiére</th>
                                <th>Niveau</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if resultats is not empty %}
                            {% for resultats  in resultats  %}

                            <tr>
                                <td> <a href="{{ asset('files/resultats/'~resultats.id~'/'~resultats.pathFile) }}">{{resultats.nom }}</a></td>

                                <td>

                                    {{resultats.niveau.filiere.nom }}</td>


                                <td>
                                    {{resultats.niveau.numeroNiveau }}

                                </td>


                                <td>
                                    <a href="{{ path('faculte_admin_modifier_resultats',{'idR':resultats.id}) }}" style="color:blue;"> <span class="label label-mn label-primary"><i class="fa fa-edit font-white"></i></span></a>

                                    <a href="#modal-delete{{ resultats.id}}"
                                       data-toggle="modal"
                                       style="color:blue;"><span class="label label-mn btn red-thunderbird"><i class="fa fa-trash-o font-white"></i></span></a>
                                </td>
                                <div id="modal-delete{{  resultats.id }}" class="modal fade" role="dialog" aria-labelledby="myModalLabel10" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                                <h4 class="modal-title">Supprimer Résultat </h4>
                                            </div>
                                            <div class="modal-body">
                                                <p style="color:red" >Voulez-vous supprimer cette résultat "{{ resultats.nom }}"?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{path('faculte_admin_supprimer_resultats',{'idR':resultats.id})  }}" class="btn green"> Enregistrer</a>
                                                <button class="btn default" data-dismiss="modal" aria-hidden="true">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </tr>

                            {%endfor  %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
