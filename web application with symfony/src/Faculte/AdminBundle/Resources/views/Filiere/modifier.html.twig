{% extends "FaculteAdminBundle::layout.html.twig"%}

{% block content %}
    <div class="page-content">
        <!-- BEGIN BREADCRUMBS -->
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('faculte_admin_homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('faculte_admin_filieres') }}"  >liste des Filieres</a>
                </li>
                <li class="active">Modifier l'information de la filière</li>
            </ol>
        </div>
        <!-- END BREADCRUMBS -->
        <!-- BEGIN PAGE BASE CONTENT -->
        <div class="col-md-12">
            <div class="row">
                <!-- BEGIN PORTLET-->
                <div class="portlet light form-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-edit font-green  "></i>
                            <span class="caption-subject font-green ">Formulaire de modification</span>
                        </div>
                    </div>
                    <!-- BEGIN SAMPLE FORM PORTLET-->

                    <div class="portlet-body form ">
                        <form class="form-horizontal" action="{{ path('faculte_admin_modifier_filiere',{'idF':Filiere.id}) }}"  method="POST" role="form">
                            <div class="form-body col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12 " style="color:red;">
                                        {{ form_errors(form) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.nom,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom' }} ) }}
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                            </div>
                            <div class="form-actions ">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green"><span class="label label-mn label-green"><i class="fa fa-pencil font-white"> Mettre à jour</i></span></button>
                                    <button type="button" class="btn default"  onclick='location.href="{{ path('faculte_admin_filieres') }}"'>Annuler</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- END SAMPLE FORM PORTLET-->
                </div>
                <!-- END PORTLET-->
            </div>
        </div>
        <!-- END PAGE BASE CONTENT -->
    </div>
{% endblock %}