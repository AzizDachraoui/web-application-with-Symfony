{% extends "FaculteAdminBundle::layout.html.twig"%}

{% block content %}
    <div class="page-content">
        <!-- BEGIN BREADCRUMBS -->
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('faculte_admin_homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('faculte_admin_niveaux') }}"  >liste des Niveaux</a>
                </li>
                <li class="active">Modifier l'information du niveau</li>
            </ol>
        </div>
        <!-- END BREADCRUMBS -->
        <!-- BEGIN PAGE BASE CONTENT -->
        <div class="col-md-12">
            <div class="row">
                <!-- BEGIN PORTLET-->
                <div class="portlet light form-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-edit font-green  "></i>
                            <span class="caption-subject font-green ">Formulaire de modification</span>
                        </div>
                    </div>
                    <!-- BEGIN SAMPLE FORM PORTLET-->

                    <div class="portlet-body form ">
                        <form class="form-horizontal" action="{{ path('faculte_admin_modifier_niveau',{'idN':Niveau.id}) }}"  method="POST" role="form">
                            <div class="form-body col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12 " style="color:red;">
                                        {{ form_errors(form) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.filiere,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.filiere,{'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.numeroNiveau,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.numeroNiveau,{'attr': {'class': 'form-control','placeholder':'Numéro de niveau' }} ) }}
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                            </div>
                            <div class="form-actions ">
                                <div class="col-md-offset-3 col-md-9">
                                    <span class="label label-mn label-green">
                                    <button type="submit" class="btn green"> <i class="fa fa-pencil font-white"> Mettre à jour</i></button></span>
                                    <button type="button" class="btn default"  onclick='location.href="{{ path('faculte_admin_niveaux') }}"'>Annuler</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- END SAMPLE FORM PORTLET-->
                </div>
                <!-- END PORTLET-->
            </div>
        </div>
        <!-- END PAGE BASE CONTENT -->
    </div>
{% endblock %}