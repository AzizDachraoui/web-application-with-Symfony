{% extends "FaculteEtudiantBundle::layout.html.twig" %}

{% block content %}
    <div class="col-md-9 col-sm-9">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('faculte_etudiant_homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('faculte_etudiant_homepage') }}">Catégories de cours</a>
                </li>
                <li>
                   Catégories de matières
                </li>
                <li class="active">Liste des cours</li>
            </ol>
        </div>
        <div class="panel panel-default">

                <div class="panel-body">
                    <div class="portlet light ">
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover"  id="sample_1">
                                <thead>
                                <tr>
                                    <th  class="hide">COUR</th>
                                    <th class="hide"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if cours is not empty %}
                                    {% for cour in cours %}
                                            <tr>
                                                <td>
                                                    <b>{{ cour.nom }}</b> <br>
                                                    <a href="{{ asset('files/cours/'~cour.id~'/'~cour.pathFile) }}">Téléchargement</a>
                                                </td>
                                                <td class="hide"> </td>
                                            </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

        </div>
    </div>
{% endblock %}