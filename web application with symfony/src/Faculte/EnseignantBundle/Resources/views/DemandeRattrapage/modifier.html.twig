{% extends "FaculteEnseignantBundle::layout.html.twig"%}

{% block content %}
    <div class="page-content">
        <!-- BEGIN BREADCRUMBS -->
        <div class="breadcrumbs">
            <h1>Gestion des Cours</h1>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('faculte_enseignant_homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('faculte_enseignant_cours') }}"  >liste des Cours</a>
                </li>
                <li class="active">Modifier Cours</li>
            </ol>
        </div>
        <!-- END BREADCRUMBS -->
        <!-- BEGIN PAGE BASE CONTENT -->
        <div class="col-md-12">
            <div class="row">
                <!-- BEGIN PORTLET-->
                <div class="portlet light form-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-social-dribbble font-green"></i>
                            <span class="caption-subject font-green bold uppercase">Modifier Cour</span>
                        </div>
                        <div class="actions">
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-cloud-upload"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-wrench"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-trash"></i>
                            </a>
                        </div>
                    </div>
                    <!-- BEGIN SAMPLE FORM PORTLET-->

                    <div class="portlet-body form ">
                        <form class="form-horizontal" action="{{ path('faculte_enseignant_modifier_cour',{'idC':Cour.id}) }}"  method="POST" role="form">
                            <div class="form-body col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12 " style="color:red;">
                                        {{ form_errors(form) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">
                                        <label for="Matiere_nom" class="required">Nom</label>
                                    </label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom' }} ) }}
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                            </div>
                            <div class="form-actions ">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">Enregistrer</button>
                                    <button type="button" class="btn default">Annuler</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- END SAMPLE FORM PORTLET-->
                </div>
                <!-- END PORTLET-->
            </div>
        <!-- END PAGE BASE CONTENT -->
    </div>
{% endblock %}