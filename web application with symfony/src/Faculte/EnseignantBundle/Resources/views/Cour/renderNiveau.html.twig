
<select id="faculte_adminbundle_cour_niveaux" name="faculte_adminbundle_cour[niveaux][]" required="required" class="form-control" multiple="multiple">
    {%if niveaux is not empty%}
        {%for niveau in niveaux%}
            <option value="{{niveau.id}}" id="{{niveau.id}}">{{niveau.numeroNiveau}}</option>
        {%endfor%}
    {%endif%}
</select>

<script type="text/javascript">
    $(document).ready(function () {
        $("#faculte_adminbundle_cour_niveaux").change(function () {
            var idNiveaux = $(this).val();
            console.debug(idNiveaux);
            var dataString = {idNiveaux: idNiveaux};
            $.ajax
            ({
                type: "POST",
                url: "{{ path('faculte_enseignant_render_matiere_cour') }}",
                data: dataString,
                success: function (response) {
                    $("#select_groupe").html(response);
                }
            });
        });

    });
</script>

